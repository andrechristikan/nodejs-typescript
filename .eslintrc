{
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2018
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParameters": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "regexUFlag": true,
    "regexYFlag": true,
    "restParams": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": true,
    "globalReturn": true
  },
  "rules": {
    // -- Possible Error
    "comma-dangle": [2, "never"],
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-else-if": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": [
      2,
      { "skipStrings": true, "skipComments": true }
    ],
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-template-curly-in-string": 2,
    "no-unreachable": 2,
    "no-unsafe-finally": 2,
    "require-atomic-updates": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    // Warm agree
    "no-empty-character-class": 2,
    "no-extra-boolean-cast": 2,
    "no-import-assign": 2,
    "no-inner-declarations": 2,

    // -- ES6
    "arrow-body-style": [2, "as-needed"],
    "arrow-parens": [2, "always"],
    "arrow-spacing": 2,
    "constructor-super": 2,
    "generator-star-spacing": [2, { "before": true, "after": false }],
    "no-confusing-arrow": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-duplicate-imports": [2, { "includeExports": true }],
    "no-this-before-super": 2,
    "no-var": 2,
    "no-useless-rename": 2,
    "no-useless-computed-key": 2,
    "prefer-template": 2,
    "prefer-spread": 2,
    "prefer-rest-params": 2,
    "prefer-arrow-callback": 2,
    "yield-star-spacing": [2, { "before": true, "after": false }],
    "template-curly-spacing": ["error", "never"],
    "symbol-description": 2,
    "rest-spread-spacing": ["error", "never"],
    "require-yield": 2,
    // Warm agree
    "no-class-assign": 2,
    "no-new-symbol": 2,
    "object-shorthand": 2,

    // Strict
    "strict": [2, "modules"],

    // Variable
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 2,
    // "no-undefined":2,
    // "no-undef":2,
    "no-unused-vars": 1,
    "no-use-before-define": 2,

    // Common Js
    "callback-return": 2,
    "global-require": 2,
    "handle-callback-err": 1,
    "no-buffer-constructor": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-env": 2,
    "no-process-exit": 2,
    "no-sync": 2,

    // Stylistic
    "array-bracket-spacing": [2, "never"],
    "block-spacing": [2, "always"],
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "camelcase": [2, { "properties": "never", "ignoreDestructuring": true }],
    "comma-spacing": [2, { "before": false, "after": true }],
    "comma-style": [2, "last"],
    "consistent-this": [2, "self"],
    "eol-last": 2,
    "func-call-spacing": 2,
    "func-style": [2, "expression"],
    "jsx-quotes": [2, "prefer-double"],
    "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
    "line-comment-position": [1, { "position": "above" }],
    "lines-between-class-members": [2, "always"],
    "new-cap": 2,
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-bitwise": 2,
    "no-inline-comments": 1,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-new-object": 2,
    "no-plusplus": [1, { "allowForLoopAfterthoughts": true }],
    "no-tabs": [1, { "allowIndentationTabs": true }],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-whitespace-before-property": 2,
    "object-curly-spacing": [2, "always"],
    // "padded-blocks": 2,
    "quote-props": [2, "as-needed"],
    "quotes": [
      2,
      "double",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "semi": [2, "always"],
    "semi-spacing": [2, { "before": false, "after": true }],
    "semi-style": [2, "last"],
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-unary-ops": [2, { "words": true, "nonwords": false }],
    "spaced-comment": [2, "always"],
    "switch-colon-spacing": ["error", { "after": true, "before": false }],
    "indent": [2, 2, { "SwitchCase": 2 }],

    // Best Practice
    // "accessor-pairs": 2,
    "array-callback-return": [2, { "allowImplicit": true }],
    "block-scoped-var": 2,
    "class-methods-use-this": 2,
    "default-case": 2,
    "default-param-last": 2,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": [2, "smart"],
    "max-classes-per-file": [2, 1],
    "no-alert": 2,
    "no-caller": 2,
    "no-case-declarations": 2,
    "no-constructor-return": 2,
    "no-div-regex": 1,
    "no-else-return": 2,
    "no-empty-function": 2,
    "no-empty-pattern": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-label": 2,
    // "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-global-assign": 2,
    // "no-magic-numbers": 2,
    "no-loop-func": 2,
    "no-lone-blocks": 2,
    "no-labels": 2,
    "no-iterator": 2,
    "no-invalid-this": 2,
    "no-implied-eval": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-param-reassign": 1,
    "no-proto": 2,
    "no-redeclare": 2,
    // "no-return-assign": 2,
    "no-script-url": 1,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 1,
    "no-unused-labels": 1,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-useless-escape": 1,
    "no-void": 2,
    "no-warning-comments": 1,
    "no-with": 2,
    "radix": [2, "as-needed"],
    "vars-on-top": 1,
    "wrap-iife": [2, "inside"],
    "yoda": 2
  },
  "extends": [
    "eslint:recommended"
    // "plugin:prettier/recommended",
    // "prettier"
  ]
}
