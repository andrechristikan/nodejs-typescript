{
  "name": "andrechristikan",
  "version": "0.1.0",
  "private": true,
  "author": "Andre Christi Kan",
  "description": "Personal project",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrechristikan/resume.git"
  },
  "license": "MIT",
  "scripts": {
    "pre": "npm install --only=dev && npm install",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build-ts": "tsc",
    "test": "jest --forceExit --coverage --verbose",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "serve-debug": "nodemon --inspect dist/server.js"
  },
  "dependencies": {
    "async": "^3.2.0",
    "axios": "^0.19.2",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-session": "^1.17.1",
    "helmet": "^3.22.0",
    "hpp": "^0.2.3",
    "moment": "^2.24.0",
    "mongoose": "^5.9.7",
    "nodemailer": "^6.4.6"
  },
  "devDependencies": {
    "@types/async": "^3.2.0",
    "@types/bluebird": "^3.5.30",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.1.0",
    "@types/cors": "^2.8.6",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "0.0.46",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^25.2.1",
    "@types/mongoose": "^5.7.13",
    "@types/node": "^13.13.2",
    "@types/nodemailer": "^6.4.0",
    "@types/shelljs": "^0.8.7",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "jest": "^25.5.2",
    "nodemon": "^2.0.3",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
